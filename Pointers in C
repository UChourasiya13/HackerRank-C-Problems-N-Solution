/* Complete the function void update(int *a,int *b).
It receives two integer pointers, int* a and int* b. Set the value of  to their sum,
and  to their absolute difference. There is no return value, and no return statement is needed. */

#include <stdio.h>
#include <stdlib.h>
#include <math.h>
void update(int *a,int *b) {
        
    int n1 , n2 ;
    n1 = *a + *b ;
    n2 = abs(*a - *b);
    *a = n1 ;
    *b = n2 ;
}
int main() {
    int a, b;
    int *pa = &a, *pb = &b;
    
    scanf("%d %d", &a, &b);
    update(pa, pb);
    printf("%d\n%d", a, b);

    return 0;
}

